<style>
  section {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--gap);

    position: relative;

    padding: var(--gap) 0;

    pointer-events: none;

    & h2 {
      grid-column: 1 / -1;

      text-align: center;
    }

    &:after {
      content: 'Sección en desarrollo';

      display: grid;
      place-items: center;

      position: absolute;
      inset: 0;
      z-index: 10;

      background-image: linear-gradient(transparent, var(--dark-color));
      color: var(--main-color);
      font-size: 3em;
      font-weight: 800;

      /* Momentáneo hasta tener nuevos proyectos que se puedan mostrar aquí */
      pointer-events: none;
    }
  }
</style>
