---
import GitHubIcon from "@/components/icons/GitHubIcon.astro";
import LinkedInIcon from "@/components/icons/LinkedInIcon.astro";
---

<ul>
  <li>
    <a href="https://www.linkedin.com/in/rrdevme/" target="_blank">
      <LinkedInIcon />
    </a>
  </li>
  <li>
    <a href="https://github.com/rr69sport" target="_blank">
      <GitHubIcon />
    </a>
  </li>
  <li class="full-left">
    <a href="/assets/cv/resume.pdf" download="richard-ramirez-resume.pdf">
      Descargar CV
    </a>
  </li>
</ul>

<style>
  ul {
    display: flex;
    align-items: center;
    justify-content: end;
    gap: var(--gap);

    position: sticky;
    top: 0;
    z-index: 10;

    width: 100%;
    max-width: var(--max-width);
    padding: var(--gap);

    backdrop-filter: blur(5px);
    animation: bg-social-media linear both;
    animation-timeline: scroll();
    animation-range: 0 150px;

    background-color: var(--dark-color);

    & li.full-left {
      margin-left: auto;
    }

    & a {
      display: flex;
      align-items: center;
      gap: var(--gap);

      padding: calc(var(--gap) / 2) var(--gap);

      color: var(--dark-color);
      font-weight: 700;
      background-color: var(--light-color);

      border-radius: 3px;

      &:hover {
        background-color: var(--main-color);
      }
    }
  }

  @keyframes bg-social-media {
    to {
      background-color: rgba(255, 255, 255, 0.1);
    }
  }
</style>
