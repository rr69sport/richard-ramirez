<style>
  section {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--gap);

    padding: var(--gap) 0;

    position: relative;

    & h2 {
      grid-column: 1 / -1;

      text-align: center;
    }

    &:after {
      content: "Sección en desarrollo";
      position: absolute;
      inset: 0;
      z-index: 10;
      pointer-events: none;

      display: grid;
      place-items: center;

      background-image: linear-gradient(transparent, var(--dark-color));
      color: var(--main-color);
      font-size: 3em;
      font-weight: 800;
    }
  }
</style>
